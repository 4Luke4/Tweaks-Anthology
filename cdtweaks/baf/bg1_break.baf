IF
  HitBy([ANYONE],CRUSHING)
  !HitBy([ANYONE],POISON)
  CheckStat(Myself,1,TRACKING)
  Delay(1)
THEN
  RESPONSE #1
    ApplySpellRES("cdbrak2",Myself)
    Continue()
  RESPONSE #99
    Continue()
END

